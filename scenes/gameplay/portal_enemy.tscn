shader_type canvas_item;
render_mode blend_mix;

uniform vec4 u_color: hint_color = vec4(1,0,1,1);
uniform float u_progress = 1.;

void fragment() {
	vec4 col = vec4(1.);
	
	float dist = distance(UV, vec2(.5, .5));
	if (dist > .5) 
		col.a = 0.;
	else {
		col.a = .5 - dist;
	}
	col.a = pow(col.a, .8);
	col.rgb = u_color.rgb;
	col.a *= u_progress;
	COLOR = col;
}"

