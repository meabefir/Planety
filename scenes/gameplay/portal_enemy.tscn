code = "// NOTE: Shader automatically converted from Godot Engine 3.5.2.stable's CanvasItemMaterial.

shader_type canvas_item;
render_mode blend_mix;

uniform float u_spawnProgress = .5f;
uniform float u_margin = .15;

uniform vec4 u_baseColor: hint_color = vec4(.5, .3, .0, 1.);
uniform vec4 u_targetColor: hint_color = vec4(.8, .0, .8, 1.);

uniform bool u_changeColor = false;

uniform sampler2D u_disolveTex;
uniform bool u_die = false;
uniform float u_dieProgress = 0.;

void fragment() {
	COLOR = texture(TEXTURE, UV);
		
	if (COLOR.a != 0.) {
		if (1. - UV.y > u_spawnProgress) {
			float str = clamp((1. - UV.y - u_spawnProgress) / u_margin, 0., 1.);
			COLOR.a = 1. - str;
		}
	}
	
	if (u_changeColor) {
		float sim = .7 - distance(COLOR.rgb, u_baseColor.rgb);
		
		if (sim > .3)
			COLOR.rgb = mix(COLOR.rgba, u_targetColor, sim).rgb;
	}
	
	if (u_die) {
		if (COLOR.a != 0.)
			COLOR.a = max(COLOR.a - texture(u_disolveTex, UV).r * u_dieProgress, 0.);
//			COLOR.a = texture(u_disolveTex, UV).r;
	}
}"

